<!-- Config file for the game -->

<config>
  <app framerate_cap="30">
    <title>Slime Fall</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="false"/>
    <debug zoom="1" max_zoom="3"/>
    <blit margin="30"/>
    <debug_border_margin value="4"/>
    <smooth_speed value="10"/>
    <tremble value="12"/>
  </renderer>

  <audio>
    <mute value="false"/>
    <fade_time default="1.0"/>
    <volume_music default="40"/>
    <volume_sfx default ="40"/>
    <max_volume value="100"/>
  </audio>

  <input>
    <max_keys value="300"/>
  </input>

  <window>
    <resolution width="1280" height="720" scale="2"/>
    <fullscreen value="true"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <scene_manager>
    <document path="data/scenes.xml"/>
  </scene_manager>

  <entity_manager>
    <document path="data/entities.xml"/>
  </entity_manager>

  <gui>
    <atlas path="textures/atlas.png"/>
    <fx_button_hover path="audio/fx/button_hover.wav"/>
    <fx_button_clicked path="audio/fx/button_clicked.wav"/>
    <game_over path="textures/GameOver2.png"/>
  </gui>

  <hud>
    <hp value="5"/>
  </hud>
  
</config>

 



