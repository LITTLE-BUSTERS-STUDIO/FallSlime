<!-- Config file for the game -->

<config>
  <app>
    <title>Slime Fall</title>
    <organization>UPC</organization>
  </app>
  <renderer>
    <vsync value="true"/>
    <debug zoom="1" max_zoom="4"/>
    <blit margin="30"/>
  </renderer>
  <audio>
      <volume_music default="2"/>
      <volume_sfx default ="2"/>
      <mute value="false"/>
  </audio>
  
  <window>
    <resolution width="1280" height="720" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
  <file_system>
    <path>data.zip</path>
  </file_system>
  <map>
    <folder>maps/</folder>
  </map>
  <player>
    <texture path ="textures/player_animation.png"/>
    <collider width="20" height="20"/>
    <physics gravity ="0.4" speed_air ="2.5" speed_ground ="0" speed_jump ="8"/>
  </player>
  <scene>
    <music path="audio/music/Level1.ogg"/>
  </scene>
</config>