  <entities>
    
    <player name ="player">

      <collider width="20" height="20"/>
      <variables gravity ="1100" speed_air ="150.0" speed_ground ="0" speed_jump ="400" speed_gummy_jump ="180" speed_attack="600.0" />
      <animations>
        <jumping path ="animations/player_animation.xml"/>
        <death path ="animations/player_death_animation.xml"/>
        <attack path ="animations/player_attack_animation.xml"/>
      </animations>
      <textures>
        <jumping path ="textures/player_animation.png"/>
        <death path ="textures/player_death.png"/>
        <attack path ="textures/player_attack.png"/>
      </textures>
      <sfx>
        <jump1 path ="audio/fx/jump1.wav"/>
        <jump2 path ="audio/fx/jump2.wav"/>
        <jump3 path ="audio/fx/jump3.wav"/>
        <jump4 path ="audio/fx/jump4.wav"/>
        <jump5 path ="audio/fx/jump5.wav"/>
        <death path ="audio/fx/death.wav"/>
        <attack path ="audio/fx/attack.wav"/>
      </sfx>

    </player>

    <enemy name ="bat">
      <variables detection_ratio="0" path_interval_time="0"/>
      <collider width ="20" height="20"/>
      <spawn_margin width ="40" height="40"/>
      <animations>
        <enemy_bat path ="animations/enemy_bat_animation.xml"/>
        <smoke path ="animations/smoke_animation.xml"/>
      </animations>
      <textures>
        <enemy_bat path ="textures/Enemy_bat.png"/>
        <smoke path ="textures/Smoke.png"/>
      </textures>
    </enemy>

    <enemy name ="skeleton">
      <variables detection_ratio="0" path_interval_time="0"/>
      <collider width ="20" height="20"/>
      <spawn_margin width ="40" height="40"/>
      <animations>
        <enemy_skeleton path ="animations/skeleton_animation.xml"/>
      </animations>
      <textures>
        <enemy_skeleton path ="textures/Skeleton.png"/>
      </textures>
    </enemy>


  </entities>